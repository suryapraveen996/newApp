
<%- include ../layouts/header.ejs %>	

<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>

<form action="/users/add" method="post" name="form1" class="form">
	<table>
		<tr> 
			<td>ENTER NAME</td>
			<td><input type="text" name="name" id="name" value="<%= name %>" style="border-radius: 7px;"/></td>
		</tr>
		<tr> 
			<td>ENTER AGE</td>
			<td><input type="text" name="age" value="<%= age %>" style="border-radius: 7px;"/></td>
		</tr>
		<tr> 
			<td>ENTER EMAIL ID</td>
			<td><input type="text" name="email" value="<%= email %>" style="border-radius: 7px;" /></td>
		</tr>
		<tr> 
			<td></td>
			<td><input type="submit" name="Submit" value="ADD" class="button"></td>
		</tr>
	</table>
</form>

<style>
	.form {
		margin-left: -7px;
    margin-right: -9px;
		height: -webkit-fill-available;
		padding-top: 20px;
		background-color: white;
		margin-top: 10px;
	}
	.button {
		width: 70px;
    height: 37px;
    background: #1e1553;
    border-radius: 7px;
    color: white;
	}
</style>
